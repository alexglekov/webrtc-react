{
  "compilerOptions": {
    "target": "es5",                         
    "module": "commonjs",                     
    "outDir": "./dist",
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,

    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "*": [
        "node_modules/*"
      ]
    },     
    "esModuleInterop": true,
  },
  "exclude": ["node_modules"],
  "include": ["./src/**/*.ts"],
}
